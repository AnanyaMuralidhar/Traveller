<h1 style="text-align:center">Home#index</h1>
<p style="text-align:center">Homepage</p>

<div class="container" >
  <h3 style="text-align:center">Ready to book your trip?</h3>
</div>

<div class="container">
  <h2 class="packages">Packages</h2>
  <% Trippackage.all.each do |package|%>
<div class="card mb-3">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title" style="text-align:center"><%=package.package_name%></h5>
    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text">Destination: <%=package.destination%></p>
    <p class="card-text"><small class="text-body-secondary"><%=package.departure %> to <%=package.arrival%></small></p>
  </div>
</div>
<%end%>
</div>
